<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />
    
    <style name="commonEditTextStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginRight">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginTop">@dimen/items_vertical_margin</item>
		<item name="android:textColor">@color/heading_text_color</item>
		<item name="android:typeface">sans</item>
		<item name="android:textSize">@dimen/edit_textbox_font_size</item>
	</style>
	
    <style name="commonH1TextViewStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginRight">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginTop">@dimen/items_vertical_margin</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingLeft">@dimen/items_horizontal_padding</item>
		<item name="android:paddingRight">@dimen/items_horizontal_padding</item>
		<item name="android:textColor">@color/h1_textview</item>
		<item name="android:typeface">sans</item>
		<item name="android:textSize">@dimen/h1_heading_font_size</item>
	</style>
	
    <style name="commonH1TextViewValueStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginRight">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginTop">@dimen/items_vertical_margin</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/h1_textview_value</item>
		<item name="android:typeface">sans</item>
		<item name="android:textSize">@dimen/h1_heading_font_size</item>
	</style>
	
    <style name="commonH2TextViewStyle">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">@dimen/items_vertical_margin</item>
		<item name="android:layout_marginRight">@dimen/items_horizontal_margin</item>
		<item name="android:textColor">@color/h2_textview</item>
		<item name="android:typeface">sans</item>
		<item name="android:textSize">@dimen/h2_heading_font_size</item>
	</style>
	
    <style name="commonH3TextViewStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_marginLeft">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginRight">@dimen/items_horizontal_margin</item>
		<item name="android:textColor">@color/h3_textview</item>
		<item name="android:typeface">sans</item>
		<item name="android:textSize">@dimen/h3_heading_font_size</item>
		<item name="android:drawablePadding">@dimen/h3_drawable_text_padding</item>
	</style>
	
    <style name="commonButttonStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginRight">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginTop">@dimen/items_vertical_margin</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:paddingLeft">@dimen/items_horizontal_padding</item>
		<item name="android:paddingRight">@dimen/items_horizontal_padding</item>
		<item name="android:paddingTop">@dimen/items_vertical_padding</item>
		<item name="android:paddingBottom">@dimen/items_vertical_padding</item>
		<item name="android:textColor">@drawable/button_text_custom</item>
		<item name="android:typeface">sans</item>
		<item name="android:textSize">@dimen/button_font_size</item>
		<item name="android:background">@drawable/button_custom</item>
	</style>
	
    <style name="commonActionButtonStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/action_button_text</item>
		<item name="android:typeface">sans</item>
		<item name="android:textSize">@dimen/button_font_size</item>
	</style>
	
    <style name="commonlistitemtextStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_marginLeft">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginRight">@dimen/items_horizontal_margin</item>
		<item name="android:textColor">@color/listview_footer_textview</item>
		<item name="android:typeface">sans</item>
		<item name="android:textSize">@dimen/listview_footer_items_font_size</item>
	</style>

    <style name="commonDetailsh1TextViewStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginRight">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginTop">@dimen/items_vertical_margin</item>
		<item name="android:layout_marginBottom">@dimen/items_vertical_margin</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/offerdetailsh1_textview</item>
		<item name="android:typeface">sans</item>
		<item name="android:textSize">@dimen/offerdetail_heading_font_size</item>
		<item name="android:drawablePadding">@dimen/h3_drawable_text_padding</item>
	</style>
	
    <style name="commonDetailsh2TextViewStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginRight">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginTop">@dimen/items_vertical_margin</item>
		<item name="android:layout_marginBottom">@dimen/items_vertical_margin</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/offerdetailsh2_textview</item>
		<item name="android:typeface">sans</item>
		<item name="android:textStyle">italic</item>
		<item name="android:textSize">@dimen/offerdetail_heading_font_size</item>
		<item name="android:drawablePadding">@dimen/h3_drawable_text_padding</item>
	</style>
	
    <style name="commonh1reviewsTextViewStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginRight">@dimen/items_horizontal_margin</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/reviewsh1_textview</item>
		<item name="android:typeface">sans</item>
		<item name="android:textSize">@dimen/reviews_h1_font_size</item>
		<item name="android:drawablePadding">@dimen/h3_drawable_text_padding</item>
	</style>
	
    <style name="commonh2reviewsTextViewStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/items_horizontal_margin</item>
		<item name="android:layout_marginRight">@dimen/items_horizontal_margin</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/reviewsh2_textview</item>
		<item name="android:typeface">sans</item>
		<item name="android:textSize">@dimen/reviews_h2_font_size</item>
		<item name="android:drawablePadding">@dimen/h3_drawable_text_padding</item>
	</style>
</resources>
